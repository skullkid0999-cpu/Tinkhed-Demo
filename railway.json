{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS"
    },
    "deploy": {
        "startCommand": "cd main && java -Dspring.profiles.active=prod -Dserver.port=$PORT -jar target/main-0.0.1-SNAPSHOT.jar",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}
